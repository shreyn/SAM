# SAM Environment Configuration
# Copy this file to .env and fill in your actual values

# LLM API Configuration
API_URL=http://127.0.0.1:1234
MODEL_NAME=mistralai/mistral-nemo-instruct-2407

# Google Calendar Configuration
# Path to your Google Calendar OAuth credentials file
GOOGLE_CREDENTIALS_PATH=data/credentials.json
# Path to store OAuth tokens
GOOGLE_TOKEN_PATH=data/token.pickle
# Google Calendar scopes (comma-separated)
GOOGLE_SCOPES=https://www.googleapis.com/auth/calendar

# SAM Configuration
SAM_NAME=SAM
SAM_PERSONALITY=assistant
MAX_RESPONSE_LENGTH=500

# Timezone Configuration
TIMEZONE=America/Los_Angeles

# Data Directory Configuration
# Base data directory (relative to project root)
DATA_DIR=data

# Optional: Add any other API keys or sensitive configuration here
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here
# HUGGINGFACE_API_KEY=your_huggingface_key_here
